<table class="table is-fullwidth">
  <thead>
    <tr>
      <th>Place name</th>
      <th>Location</th>
      <th>Description</th>
      <th>Category</th>
      <th><i class="fas fa-cog"></i></th>
      <th><i class="fas fa-camera-retro"></i></th>
    </tr>
  </thead>
  <tbody>
    {{#each category.places}}
      <tr>
        <td>{{placename}}</td>
        <td>Lat: {{latitude}}<br>Lon: {{longitude}}</td>
        <td style="white-space: pre-line">{{description}}</td>
        <td>{{categorytitle}}</td>
        <td>
          <a href="/place/{{../category._id}}/editplace/{{_id}}" class="ui icon button">
            <i class="fas fa-pencil-alt"></i>
          </a><br>
          <a href="/category/{{../category._id}}/deleteplace/{{_id}}" class="ui icon button">
            <i class="fas fa-trash"></i>
          </a>
        </td>
        <td>
          {{> place-image}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>